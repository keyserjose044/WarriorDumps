---
/* src/pages/index.astro */
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  SITE_NAME,
  SITE_PHONE,
  SITE_EMAIL,
} from '../consts';

const hero = '/images/hero.jpg'; // your truck + trailer photo

// Turn "(469) 597-5928" into "tel:14695975928"
const phoneDigits = SITE_PHONE.replace(/\D/g, '');
const phoneHref = `tel:1${phoneDigits}`;
const mailHref = `mailto:${SITE_EMAIL}`;
---

<BaseLayout
  title={`${SITE_TITLE} | Dependable Junk Removal in DFW`}
  description={SITE_DESCRIPTION}
  image={hero}
>
  <!-- Preload hero for faster LCP -->
  <Fragment slot="head">
    <link rel="preload" as="image" href={hero} />
  </Fragment>

  <!-- ===== HERO ===== -->
  <section class="hero" aria-label="Warrior Dumps â€” Junk Removal  in DFW">
    <img
      class="hero-img"
      src={hero}
      alt="Warrior Dumps owner standing by red truck and dump trailer ready for work"
      decoding="async"
      loading="eager"
    />

    <div class="hero-inner">
      <h1>Dependable Junk Removal in DFW</h1>
      <p class="lede">
        Fast, hassle-free junk removal for homes, contractors,
        and businesses across the Dallasâ€“Fort Worth area.
      </p>

      <div class="cta-row">
        <span class="btn btn-badge">Locally Owned &amp; Insured</span>
        <a class="btn btn-primary" href="#contact">Book a Haul-Off</a>
        <a class="btn btn-outline" href={phoneHref}>Call {SITE_PHONE}</a>
      </div>
    </div>
  </section>

  <!-- ===== ABOUT / WHAT WE DO ===== -->
  <section id="about" class="content">
    <h2>About {SITE_NAME}</h2>
    <p>
      <strong>{SITE_NAME}</strong> is a local junk removal
      service based in the Dallasâ€“Fort Worth area. Whether you are cleaning out
      a garage, remodeling a house, or running a jobsite, we take your dumps.
    </p>

    <div class="grid">
      <div>
        <h3>What We Do</h3>
        <ul>
          <li>Residential cleanouts (garages, attics, rentals)</li>
          <li>Construction &amp; demolition debris</li>
          <li>Roofing, yard waste, and bulky items</li>
        </ul>
      </div>
      <div>
        <h3>Why Choose Warrior Dumps</h3>
        <ul>
          <li>Fast delivery &amp; flexible pickup</li>
          <li>Upfront, transparent pricing</li>
          <li>Serving Dallasâ€“Fort Worth and nearby cities</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- ===== GALLERY TEASER (replace images later) ===== -->
  <section id="gallery" class="pair">
    <figure>
      <img
        src="/images/rubble.jpg"
        alt="Got a big mess that needs to be hauled off?"
        loading="lazy"
      />
      <figcaption>Got a big mess that needs to be hauled off?</figcaption>
    </figure>
    <figure>
      <img
        src="/images/truck.jpg"
        alt="Warrior Dumps has the solution!"
        loading="lazy"
      />
      <figcaption>Warrior Dumps has the solution!</figcaption>
    </figure>
  </section>

  <!-- ===== CONTACT ===== -->
  <section id="contact" class="content contact">
    <h2>Contact Us</h2>
    <p class="contact-lede">
      Need junk removal in DFW? Call, text, or email to check availability and get a fast quote.
    </p>

    <div class="contact-pills">
      <div class="contact-pill">
        <span class="pill-label">Call / Text</span>
        <a href={phoneHref}>{SITE_PHONE}</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Email</span>
        <a href={mailHref}>{SITE_EMAIL}</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Company</span>
        <span>{SITE_NAME}</span>
      </div>
    </div>

    <a class="btn btn-primary btn-wide" href={phoneHref}>
      ðŸ“ž Call Now for a Free Quote
    </a>
  </section>


  <!-- ===== SMOOTH SCROLL ===== -->
  <script is:inline>
    document.addEventListener('click', (e) => {
      const a = e.target.closest('a[href^="#"]');
      if (!a) return;
      const id = a.getAttribute('href').substring(1);
      const el = document.getElementById(id);
      if (el) {
        e.preventDefault();
        el.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  </script>

  <style>
    /* === HERO === */
    .hero {
      margin-bottom: 28px;
    }

    .hero-img {
      width: 100%;
      height: auto;          /* âœ… full image, no cropping */
      display: block;
      border-radius: 12px;
      object-fit: contain;   /* extra safety if constraints ever appear */
    }

    .hero-inner {
      text-align: center;
      padding: 20px 16px 0;
      max-width: 900px;
      margin: 0 auto;
    }

    .hero h1 {
      margin: 0 0 8px;
      font-size: clamp(2rem, 6vw, 3rem);
      line-height: 1.1;
    }

    .lede {
      margin: 0 auto 16px;
      max-width: 70ch;
      font-size: clamp(1rem, 2.6vw, 1.25rem);
    }

    /* === HERO CTA BUTTONS === */
    .cta-row {
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 10px;
    }

    .btn {
      display: inline-block;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      transition:
        background .15s ease,
        color .15s ease,
        border-color .15s ease,
        box-shadow .15s ease;
    }

    /* Badge (non-clickable) */
    .btn-badge {
      background: #1e3a8a; /* dark blue */
      color: #fff;
      cursor: default;
      user-select: none;
      box-shadow: 0 6px 16px rgba(0,0,0,.25);
    }

    /* Regular buttons */
    .btn-primary {
      background: #111827;
      color: #fff;
    }
    .btn-primary:hover {
      background: #0b1220;
    }

    .btn-outline {
      border: 1px solid #111827;
      color: #111827;
      background: #fff;
    }
    .btn-outline:hover {
      border-color: #0b1220;
      color: #0b1220;
    }

    /* === SECTIONS === */
    .content {
      margin-top: 2rem;
      max-width: 1000px;
      margin-inline: auto;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 28px;
      margin-top: 1rem;
    }

    .pair {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 16px;
      margin: 2rem auto;
      max-width: 1000px;
    }

    .pair img {
      width: 100%;
      height: 260px;
      object-fit: cover;
      border-radius: 12px;
    }

    .pair figcaption {
      margin-top: 8px;
      font-size: 1rem;
      font-weight: 600;         /* bold text */
      text-align: center;       /* center the caption */
      opacity: 0.85;
      display: block;           /* ensures proper centering across browsers */
    }

      /* === CONTACT === */
      .contact {
        text-align: center;
        margin-top: 3rem;
        margin-bottom: 3rem;
      }
      
      .contact-lede {
        max-width: 40rem;
        margin: 0.5rem auto 1.5rem;
        font-size: 1.05rem;
      }
      
      .contact-pills {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 14px;
        margin-bottom: 1.75rem;
      }
      
      .contact-pill {
        min-width: 210px;
        padding: 10px 18px;
        border-radius: 999px;          /* bubble shape */
        background: #f3f4f6;
        box-shadow: 0 4px 12px rgba(15, 23, 42, 0.08);
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 0.95rem;
      }
      
      .pill-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        opacity: 0.7;
        margin-bottom: 2px;
      }
      
      .contact-pill a {
        font-weight: 600;
        color: #111827;
        text-decoration: none;
      }
      
      .contact-pill a:hover {
        text-decoration: underline;
      }
      
      .btn-wide {
        display: block;
        width: min(420px, 100%);
        margin: 0 auto;
      }

    @media (max-width: 850px) {
      .grid {
        grid-template-columns: 1fr;
      }
      .pair {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
