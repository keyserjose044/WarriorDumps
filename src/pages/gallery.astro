---
import BaseLayout from '../layouts/BaseLayout.astro';

// Add project images to /public/images and list them here:
const photos = [
  '/images/rubble.jpg',
  '/images/truck.jpg',
  '/images/bigtruck.jpg',
  '/images/warrior.jpg'
];
---
<BaseLayout title="Gallery | Warrior Dumps">
  <h1>Recent Work</h1>
  <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:12px;">
    {photos.map((src) => <img src={src} alt="Concrete project" style="width:100%;border-radius:10px;" loading="lazy" />)}
  </div>
</BaseLayout>
